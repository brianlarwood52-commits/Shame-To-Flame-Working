# Prevent directory listings
Options -Indexes

# Enable rewrite engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Explicitly allow XML, TXT, JSON files first (before general file rule)
  # This ensures sitemap.xml, robots.txt, etc. are served directly
  RewriteCond %{REQUEST_URI} \.(xml|txt|json)$ [NC]
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Allow existing files (images, CSS, JS, etc.) - serve them directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Allow common static directories (Next.js static assets)
  RewriteCond %{REQUEST_URI} ^/(_next|icons|images|assets|static|fonts)/ [NC]
  RewriteRule ^ - [L]
  
  # Special handling for /sitemap: always serve sitemap.html if it exists (before general .html rule)
  RewriteCond %{REQUEST_URI} ^/sitemap/?$ [NC]
  RewriteCond %{DOCUMENT_ROOT}/sitemap.html -f
  RewriteRule ^sitemap/?$ /sitemap.html [L]
  
  # Handle Next.js static export: try .html extension first
  # e.g., /my-story -> /my-story.html
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.*)$ $1.html [L]
  
  # Handle directory with index.html (for nested routes)
  # e.g., /daily-fire/your-scars -> /daily-fire/your-scars.html
  RewriteCond %{REQUEST_FILENAME}/index.html -f
  RewriteRule ^(.*)$ $1/index.html [L]
  
  # Final fallback: serve index.html for client-side routing (SPA routing)
  # This handles any route that doesn't match above
  RewriteRule ^ index.html [L]
</IfModule>

# Set default index files
DirectoryIndex index.html

# Set correct MIME types for XML and other files
<IfModule mod_mime.c>
  AddType application/xml .xml
  AddType text/xml .xml
  AddType application/json .json
  AddType text/plain .txt
</IfModule>

# Security headers
<IfModule mod_headers.c>
  # Don't apply nosniff to XML files (sitemap.xml needs proper content-type)
  <FilesMatch "\.(xml|txt|json)$">
    Header unset X-Content-Type-Options
    Header set Content-Type "application/xml; charset=utf-8" env=XML
  </FilesMatch>
  # Apply security headers to other files
  <FilesMatch "\.(html|css|js|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot)$">
    Header set X-Content-Type-Options "nosniff"
  </FilesMatch>
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>
